/* 画布样式 */
.firework-canvas {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 引线区域 */
.fuse-area {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 200rpx;
  z-index: 50;
  overflow: hidden;
}

.fuse-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}

.fuse-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  position: absolute;
  bottom: 0;
}

.fuse-image.burning {
  filter: brightness(1.5) drop-shadow(0 0 5px rgba(255, 200, 0, 0.8));
  animation: flicker 0.1s infinite;
}

@keyframes flicker {
  0% { filter: brightness(1.5) drop-shadow(0 0 5px rgba(255, 200, 0, 0.8)); }
  50% { filter: brightness(2.0) drop-shadow(0 0 8px rgba(255, 200, 0, 0.9)); }
  100% { filter: brightness(1.5) drop-shadow(0 0 5px rgba(255, 200, 0, 0.8)); }
}

/* 添加引线底部发光效果 */
.fuse-wrapper::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20rpx;
  height: 20rpx;
  background: radial-gradient(circle, rgba(255, 200, 0, 0.8) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s;
}

.fuse-wrapper.burning::after {
  opacity: 1;
}

/* 控制面板 */
.control-panel {
  position: absolute;
  right: -600rpx;
  top: 0;
  width: 600rpx;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  transition: right 0.3s ease;
  padding: 40rpx;
  box-sizing: border-box;
  transform: translateX(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 100;
}

.control-panel.visible {
  right: 0;
  transform: translateX(0);
}

.panel-header {
  font-size: 32rpx;
  font-weight: 500;
  padding: 30rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  color: #fff;
  margin-bottom: 40rpx;
}

.panel-section {
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin: 30rpx 0 20rpx;
}

/* 场景列表 */
.scene-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.scene-item {
  background: rgba(255, 255, 255, 0.05);
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
}

.scene-item.active {
  background: #07C160;
}

/* 效果设置 */
.effect-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  color: #fff;
}

/* 文字输入 */
.text-input {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  padding: 0 20rpx;
  color: #fff;
}

/* 控制按钮组 */
.button-group {
  position: fixed;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 100;
}

.control-button {
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
  backdrop-filter: blur(5px);
}

.control-button:active {
  transform: scale(0.95);
}

.control-button.active {
  background: rgba(7, 193, 96, 0.8);
}

.control-button image {
  width: 40rpx;
  height: 40rpx;
  transition: all 0.3s ease;
}

.control-button.share {
  padding: 0;
  margin: 0;
  line-height: 1;
}

/* 音量滑块 */
.volume-slider {
  position: fixed;
  right: 120rpx;
  top: 50%;
  transform: translateY(-50%) translateX(100%);
  width: 200rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  opacity: 0;
  transition: all 0.3s ease;
  backdrop-filter: blur(5px);
}

.volume-slider.visible {
  transform: translateY(-50%) translateX(0);
  opacity: 1;
}

/* 设置面板优化 */
.control-panel {
  backdrop-filter: blur(10px);
  box-shadow: -5px 0 15px rgba(0, 0, 0, 0.3);
  z-index: 1000;
}

.scene-item {
  transition: all 0.3s ease;
}

.scene-item:active {
  transform: scale(0.95);
}

.scene-item.active {
  background: #07C160;
  box-shadow: 0 2px 5px rgba(7, 193, 96, 0.3);
}

/* 开关样式优化 */
.effect-item switch {
  transform: scale(0.8);
}

/* 添加面板内容滚动 */
.panel-content {
  height: calc(100% - 80rpx);
  overflow-y: auto;
  padding-right: 20rpx;
}

/* 优化滚动条样式 */
.panel-content::-webkit-scrollbar {
  width: 4px;
}

.panel-content::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2px;
}

/* 优化开关样式 */
.effect-item {
  background: rgba(255, 255, 255, 0.05);
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.effect-item:active {
  background: rgba(255, 255, 255, 0.1);
}

/* 优化文字输入框 */
.text-input {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.text-input:focus {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.2);
}

/* 添加提示文本 */
.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 10rpx;
}

/* 添加面板遮罩 */
.panel-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.panel-mask.visible {
  opacity: 1;
  pointer-events: auto;
}